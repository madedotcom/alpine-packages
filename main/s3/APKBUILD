# Maintainer: Bob Gregory <bob@made.com>
pkgname=s3
pkgver=1.1.5
pkgrel=0
pkgdesc="S3 cli tool"
url="https://github.com/barnybug/s3"
arch="x86_64"
license="MIT"
depends=""
makedepends="go"
install=""
subpackages=""
#source="$pkgname-$pkgver.tar.gz::https://github.com/barnybug/s3/archive/$pkgver.tar.gz"
source="$pkgname-$pkgver.tar.gz::https://github.com/madedotcom/s3/archive/grr-version-api.tar.gz"


_builddir="$srcdir/$pkgname-$pkgver"

build() {
    cd "$_builddir"
    export GOPATH="/home/builder/package"
    go get github.com/madedotcom/s3/tree/grr-version-api
    go build ./cmd/s3
}

package() {
    cd "$_builddir"
    install -Dm755 $pkgname "$pkgdir/usr/bin/$pkgname"
}

sha512sums="709c20549396a32e6a3c5b85b7f5f94c69088b0e81d3fd6f369f4a2920843d1db71bbdad84e8ab4c8a5823cd9cecc62058da8ef8a8aa12833aeccf07a3c5dacb  $pkgname-$pkgver.tar.gz"
