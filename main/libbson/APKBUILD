# Maintainer: Bob Gregory <bob@made.com>

pkgname=libbson
pkgver=1.3.5
pkgrel=1
pkgdesc='A BSON utility library.'
arch="all"
url='http://www.mongodb.org/display/DOCS/C+Language+Center'
license='Apache'
depends="musl"
makedepends="python git autoconf automake libtool valgrind"
source="https://github.com/mongodb/libbson/releases/download/1.3.5/libbson-$pkgver.tar.gz"
sha512sums="b55ae1d424f786aabed6567a77cd09aa26c74ab0a09392e88faef8c156b1650c026f86f245bc8431a0ebcf404c4f80eb1b22e978a24289d32692c84375a66596 libbson-1.3.5.tar.gz"

build() {
    cd "$srcdir/$pkgname-$pkgver"
    autoreconf -fvi
    ./configure --prefix=/usr \
    --enable-optimizations=no
    make
}

package() {
    cd "$srcdir/$pkgname-$pkgver"
    make DESTDIR="$pkgdir/" install
}
